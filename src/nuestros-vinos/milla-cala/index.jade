extends ../../_layouts/base

include ../../_modules/slider/slider
include ../../_modules/share/share
include ../../_modules/section-title/section-title
include ../../_modules/top-footer/top-footer

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../../'

block content
    main.wine
        section.wine__hero
            .container
                .row
                    .col-xs-24.col-sm-16.col-sm-offset-4
                        span.wine__hero__name= site.data.vinos.millacala.seccion1.nombre
                        +section-title(site.data.vinos.millacala.seccion1.texto, 'h1', 'x')
                        p.wine__hero__text=site.data.vinos.millacala.seccion1.contenido
                        +share
                        a._button(href="/tienda/producto") comprar
            
                    .col-xs-24
                        .wine__parallax.wine__parallax--milla
                            .wine__parallax__element
                                img(src="/images/vinos/vinos4.png")
                
        section.wine__content
            .container
                .row
                    .col-xs-24.col-sm-16.col-sm-offset-4
                        +section-title(site.data.vinos.millacala.seccion2.nombre, 'h2', 'x')
                    .col-xs-24
                        .wine__parallax.wine__parallax--two
                    .col-xs-24.col-sm-16.col-sm-offset-4
                        .wine__content__textcol
                            each p in site.data.vinos.millacala.seccion2.contenido
                                p.wine__content__texto=p
                    .col-xs-24
                        +slider('.wine__content__slider')
                            each slide in site.data.vinos.millacala.seccion2.slider
                                .wine__content__slide
                                    if slide.type == 'video'
                                        .embed-responsive.embed-responsive-16by9.home__slide__video
                                            iframe.embed-responsive-item(src=slide.src)
                                    if slide.type == 'imagen'
                                        .home__slide__img
                                            img(src=slide.src)
        
        section.wine__data
            .container
                .row
                    .col-xs-24
                        +section-title(site.data.vinos.millacala.seccion3.texto, 'h3', 'x', 'alt')
                        ul.wine__data__composicion
                            each item in site.data.vinos.millacala.seccion3.composicion
                                li.wine__data__composicion__item
                                    span.wine__data__composicion__item__number= item.numero
                                    span.wine__data__composicion__item__text= item.texto
                        ul.wine__data__features
                            each item in site.data.vinos.millacala.seccion3.composicion2
                                li.wine__data__features__item
                                    span.wine__data__features__item__text= item.titulo
                                    span.wine__data__features__item__number= item.valor
                        
        section.wine__content
            .container
                .row
                    .col-xs-24.col-sm-16.col-sm-offset-4
                        +section-title(site.data.vinos.millacala.seccion4.nombre, 'h2', 'x')
                    .col-xs-24
                        .wine__parallax.wine__parallax--three
                    .col-xs-24.col-sm-16.col-sm-offset-4
                        .wine__content__textcol
                            each p in site.data.vinos.millacala.seccion4.notas
                                p.wine__content__texto=p
                    .col-xs-24
                        +slider('.wine__reviews__slider')
                            each slide in site.data.vinos.millacala.seccion4.slider
                                .wine__reviews__slide
                                    .wine__reviews__slide__data
                                        .wine__reviews__slide__data__pts=slide.pts
                                        .wine__reviews__slide__data__name=slide.name
                                        .wine__reviews__slide__data__desc=slide.desc
                                        img.wine__reviews__slide__data__logo(src=slide.logo)
        
        section.wine__cta
            .container
                .row
                    .col-xs-24
                        +section-title(site.data.vinos.millacala.seccion5.texto, 'h3', 'none')
                        a._button(href=site.data.vinos.millacala.seccion5.boton.url)= site.data.vinos.millacala.seccion5.boton.texto
        
        +top-footer(['historia', 'bodega'])
