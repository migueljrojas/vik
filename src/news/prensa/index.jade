                                p.news__contact__item
                                    a(href="mailto:info@vik.cl") info@vik.cl
                                p.news__contact__item
                                    strong Meg Connoly
                                    a(href="mailto:vik@mcc-pr.com") vik@mcc-pr.com
                                p.news__contact__item.news__contact__item--inline
                                    strong MCC NYC:
                                    span 212 505 8200
