extends ../../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../../'

block content
    main.news.news--press
        section.news__hero
            +section-title('Prensa', 'h1', 'none')
            ul.news__hero__tabs
                - for (var i = 0; i < 9; ++i) {
                    - var year = 2018
                    li.news__hero__tab
                        span=(year - 1)
                - }
        section.news__pages
            - for (var i = 0; i < 9; ++i) {
                - var year = 2018
                .news__page
                    .news__page__heading
                        button.news__page__nav.news__page__nav--left
                        span.news__page__year=(year - 1)
                        button.news__page__nav.news__page__nav--right
                    .news__page__articles
                        - for (var i = 0; i < 3; ++i) {
                            each article in site.data.prensa.news
                                .news__page__articles__item
                                    +press-article('press', article)
                        - }
            - }
            
        section.news__contact
            .container
                .row
                    .col-xs-24.col-sm-16.col-sm-offset-4
                        +section-title('Contacto de prensa', 'h2', 'none')
