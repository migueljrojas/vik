extends ../_layouts/base

include ../_modules/slider/slider
include ../_modules/share/share
include ../_modules/section-title/section-title
include ../_modules/top-footer/top-footer

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.retreat
        section.retreat__hero
            .retreat__hero__data
                +section-title(site.data.retreat.titulo, 'h1', 'x')
                p.retreat__hero__data__text= site.data.retreat.contenido
                a._button(href=site.data.retreat.boton.url, target="_blank")= site.data.retreat.boton.nombre
